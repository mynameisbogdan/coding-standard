{
    "name": "mnib-dev/coding-standard",
    "type": "phpcodesniffer-standard",
    "description": "Personal coding standards heavily based on Doctrine Coding Standard.",
    "license": "MIT",
    "require": {
        "php": "^7.2 || ^8.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2 || ^0.7",
        "friendsofphp/php-cs-fixer": "^2.15",
        "slevomat/coding-standard": "^6.3 || ^7.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MNIB\\CsFixer\\": "src/"
        }
    }
}
